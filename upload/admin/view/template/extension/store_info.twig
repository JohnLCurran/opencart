  <script type="text/javascript"><!--
var rating = {{ rating }};

$('#rating img').on('mouseover', function() {
	$('#rating img').attr('src', 'opencart/application/view/image/star-off.png');

	for (i = 0; i <= $(this).attr('alt'); i++) {
		$('#rating img[alt=\'' + i + '\']').attr('src', 'opencart/application/view/image/star-on.png');
	}
});

$('#rating').on('mouseout', function() {
	$('#rating img').attr('src', 'opencart/application/view/image/star-off.png');

	for (i = 0; i <= rating; i++) {
		$('#rating img[alt=\'' + i + '\']').attr('src', 'opencart/application/view/image/star-on.png');
	}
});

$('#rating img').on('click', function() {
	$.ajax({
		type: 'POST',
		url: 'index.php?route=extension/extension/rating&extension_id={{ extension_id }}',
		dataType: 'json',
		data: 'rating=' + $(this).attr('alt'),
		success: function(data) {
			if (data['error']) {
				alert(data['error']);
			}

			if (data['success']) {
				rating = data['rating'];

				for (i = 0; i <= rating; i++) {
					$('#rating img[alt=\'' + i + '\']').attr('src', 'opencart/application/view/image/star-on.png');
				}

				alert(data['success']);
			}
		}
	});
});
//--></script> 
