{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
          <div class="pull-right"><a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>

      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-puzzle-piece"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-8">
            {% if banner %}
            <div class="well well-sm"> <img src="{{ banner }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /> </div>
            {% endif %}
            {{ description }} </div>
          <div class="col-md-4">
            <div class="well well-sm">
              <button type="button" class="btn btn-primary btn-block">Buy</button>
              {% if license %}
                  Commercial
                  {% else %}
                  Free
                  {% endif %}
              
              
              Price: {{ price }}
              <hr />
              ftggfg
              <hr />
              Rating: 
              {% for i in 1..5 %}
              
              {% if rating >= i %} <i class="fa fa-star"></i> {% else %} <i class="fa fa-star-o"></i> {% endif %}
              {% endfor %}
              
              Date Added
              
              {{ date_added }} <b>Date Added</b> {{ date_added }} <b>Date Modified</b> {{ date_modified }} </div>
            <div class="well well-sm"> {{ sales }}
              
              {{ downloaded }} </div>
            <div class="well well-sm"> Comments ({{ comment_total }}) </div>
            <div class="well well-sm"> <b>Developer</b> <a href="{{ username }}">{{ member }}</a> </div>
          </div>
        </div>
        <h2>{{ name }}</h2>
        <div class="extension-info">
          <div class="additional"> {% for image in images %} <a href="{{ image.popup }}" class="colorbox" rel="colorbox"><img src="{{ image.thumb }}" alt="{{ image.name }}" title="{{ image.name }}" class="image" /></a> {% endfor %} </div>
          <div class="name">
            <table>
              <tr>
                <td rowspan="2"><b>Extension Name</b></td>
                <td rowspan="2">{{ name }}</td>
              <tr>
                <td><b>License</b></td>
                <td> </td>
                <td><b>Votes</b></td>
                <td>{{ votes }}</td>
              </tr>
              {% if license %}
              <tr>
                <td><b>Price</b></td>
                <td>{{ price }}</td>
                <td><b>Sales</b></td>
                <td></td>
              </tr>
              <tr>
                <td><b>Developer</b></td>
                <td><a href="{{ username }}">{{ member }}</a></td>
                <td></td>
                <td></td>
              </tr>
              {% else %}
              <tr>
                <td><b>Developer</b></td>
                <td><a href="{{ username }}">{{ member }}</a></td>
                <td><b>Downloads</b></td>
                <td>{{ downloaded }}</td>
              </tr>
              <tr>
                <td></td>
                <td></td>
                <td colspan="2"><img src="opencart/application/view/image/report.png" alt="" /> <a id="modal-report">Report extension</a></td>
              </tr>
              {% endif %}
            </table>
          </div>
        </div>

        
        

          
          

          <table class="list">
            <thead>
              <tr>
                <td class="left">Download Name</td>
                <td class="left">Compatibility</td>
                <td class="right">Action</td>
              </tr>
            </thead>
            <tbody>
            
            {% for download in downloads %}
            <tr>
              <td class="left">{{ download.name }}</td>
              <td class="left">{{ download.download }}</td>
              <td class="right"><b>[</b> <a href="{{ download.href }}">Download</a> <b>]</b></td>
            </tr>
            {% endfor %}
              </tbody>
            
          </table>
   
        
        
 
        <div>
          <div id="comment"></div>
          {% if logged %}
          <h2>Add Your Comment:</h2>
          <p>
            <textarea name="comment" style="width: 98%;" rows="8"></textarea>
          </p>
          <div class="buttons">
            <div class="left"><a href="{{ continue }}" class="button">Back</a></div>
            <div class="right">
              <input type="button" value="Submit" class="button" id="button-comment" />
            </div>
          </div>
          {% else %}
          <div class="comment-login">
            <p><a href="{{ login }}">Log in to comment</a> or <a href="{{ register }}">register here</a>.</p>
          </div>
          <div class="buttons">
            <div class="right"><a href="{{ continue }}" class="button">Continue</a></div>
          </div>
          {% endif %} </div>
        {% if tags %}
        <p><b>Tags</b> {% for i in 1..tags|length %}
          {% if i < tags|length - 1 %} <a href="{{ tags[i].href }}">{{ tags[i].tag }}</a>,
          {% else %} <a href="{{ tags[i].href }}">{{ tags[i].tag }}</a> {% endif %}
          {% endfor %} </p>
        {% endif %} </div>

  </div>
