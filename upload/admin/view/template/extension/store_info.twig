{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-puzzle-piece"></i> {{ name }}</h3>
      </div>
      <div class="panel-body">{% if banner %}
        <div class="well well-sm text-center"><img src="{{ banner }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></div>
        {% endif %}
        <div> {% for image in images %} <a href="{{ image.popup }}" class="colorbox" rel="colorbox"><img src="{{ image.thumb }}" alt="{{ image.name }}" title="{{ image.name }}" class="image" /></a> {% endfor %} </div>
        <ul class="nav nav-tabs">
          <li class="active"><a href="#tab-description" data-toggle="tab">{{ tab_description }}</a></li>
          <li><a href="#tab-documentation" data-toggle="tab">{{ tab_documentation }}</a></li>
          <li><a href="#tab-download" data-toggle="tab">{{ tab_download }}</a></li>
          <li><a href="#tab-comment" data-toggle="tab">{{ tab_comment }} ({{ comment_total }})</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-description" class="tab-pane active">
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <td><strong>{{ text_price }}</strong></td>
                  <td>{% if license %}
                    {{ price }}
                    {% else %}
                    Free
                    {% endif %}</td>
                </tr>
              {% if license %}
              <tr>
                <td><strong>{{ text_license }}</strong></td>
                <td>{% if license_period %}
                  {{ license_period }}
                  {% else %}
                  Unlimited
                  {% endif %}</td>
              </tr>
              {% endif %}
              <tr>
                <td><strong>Developer</strong></td>
                <td><a href="{{ filter_member }}">{{ member_username }}</a></td>
              </tr>
              <tr>
                <td><strong>{{ text_compatibility }}</strong></td>
                <td>{{ compatibility }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_rating }}</strong></td>
                <td>{% for i in 1..5 %}
                  {% if rating >= i %}<i class="fa fa-star"></i>{% else %}<i class="fa fa-star-o"></i>{% endif %}
                  {% endfor %}</td>
              </tr>
              <tr>
                <td><strong>{{ text_date_added }}</strong></td>
                <td>{{ date_added }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_date_modified }}</strong></td>
                <td>{{ date_modified }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_sales }}</strong></td>
                <td>{{ sales }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_downloaded }}</strong></td>
                <td>{{ downloaded }}</td>
              </tr>
              </tbody>
            </table>
            {{ description }}</div>
          <div id="tab-documentation" class="tab-pane">{{ documentation }}</div>
          <div id="tab-download" class="tab-pane">
            <fieldset>
              <legend>Progress</legend>
              <div id="progress">
                <div class="progress">
                  <div id="progress-bar" class="progress-bar" style="width: 0%;"></div>
                </div>
                <div id="progress-text"></div>
              </div>
              <hr />
            </fieldset>
            <fieldset>
              <legend>Available Installs</legend>

              
              <div class="alert alert-info">You must buy a license.</div>
              
              <table class="table table-bordered">
                <tbody>
                
                {% for download in downloads %}
                <tr>
                  <td>{{ download.name }}</td>
                  <td><button type="button" value="{{ download.href }}" data-loading="{{ text_loading }}" class="btn btn-primary btn-block"><i class="fa fa-download"></i> Install</button></td>
                </tr>
                {% endfor %}
                  </tbody>
                
              </table>
            </fieldset>
          </div>
          <div id="tab-comment" class="tab-pane"></div>
        </div>
      </div>
    </div>
  </div>
