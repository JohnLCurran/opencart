{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-puzzle-piece"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-8"> {% if banner %}
            <div class="well well-sm"><img src="{{ banner }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></div>
            {% endif %}
            <div> {% for image in images %} <a href="{{ image.popup }}" class="colorbox" rel="colorbox"><img src="{{ image.thumb }}" alt="{{ image.name }}" title="{{ image.name }}" class="image" /></a> {% endfor %} </div>
            <div>{{ description }}</div>
            <table>
              {% if license %}
              <tr>
                <td><b>Price</b></td>
                <td>{{ price }}</td>
                <td><b>Sales</b></td>
                <td></td>
              </tr>
              {% else %}

 
              {% endif %}
            </table>
            
             {% if downloads %}
            dfdf
             {% endif %}
  
          </div>
          <div class="col-sm-4">
            <div class="well well-sm">
                  <table class="list">
              <thead>
                <tr>
                  <td class="left">Download Name</td>
                  <td class="left">Compatibility</td>
                  <td class="right">Action</td>
                </tr>
              </thead>
              <tbody>
              
              
              
              {% for download in downloads %}
              ddfd
              <tr>
                <td class="left">{{ download.name }}</td>
                <td class="left">{{ download.compatibility }}</td>
                <td class="right"><b>[</b> <a href="{{ download.href }}">Download</a> <b>]</b></td>
              </tr>
              {% endfor %}
                </tbody>
              
            </table>
              
              
              <button type="button" class="btn btn-primary btn-block">Buy</button>
              <div class="row">
                <div class="col-md-6">Price:</div>
                <div class="col-md-6 text-right">{{ price }}</div>
              </div>
              <hr />
              <div class="row">
                <div class="col-md-12"> {% if license %}
                  Commercial
                  {% else %}
                  Free
                  {% endif %} </div>
              </div>
              <hr />
              <div class="row">
                <div class="col-md-6">Rating</div>
                <div class="col-md-6 text-right"> {% for i in 1..5 %}
                  {% if rating >= i %} <i class="fa fa-star"></i> {% else %} <i class="fa fa-star-o"></i> {% endif %}
                  {% endfor %} </div>
              </div>
              <hr />
              <div class="row">
                <div class="col-md-6">Compatibility</div>
                <div class="col-md-6 text-right"></div>
              </div>
              <hr />
              <div class="row">
                <div class="col-md-6">Date Added</div>
                <div class="col-md-6 text-right">{{ date_added }}</div>
              </div>
              <hr />
              <div class="row">
                <div class="col-md-6">Date Modified</div>
                <div class="col-md-6 text-right">{{ date_modified }}</div>
              </div>
            </div>
            <div class="well well-sm"> {{ sales }}  {{ downloaded }} </div>
            <div class="well well-sm"> Comments ({{ comment_total }}) </div>
            <div class="well well-sm"> <b>Developer</b> <a href="{{ username }}">{{ member }}</a> </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 